{
  "name": "recourse",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --fix",
    "lint:css": "stylelint \"./src/**/*.css\" --fix",
    "format": "prettier . --write",
    "preview": "vite preview",
    "prepare": "husky"
  },
  "dependencies": {
    "@react-spring/parallax": "^10.0.1",
    "@react-spring/web": "^10.0.1",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-intl": "^7.1.11"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@yelaiii/eslint": "0.0.20",
    "@yelaiii/prettier": "^0.0.4",
    "@yelaiii/stylelint": "^0.0.5",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "bun format",
      "bun lint"
    ],
    "./src/**/*.css": [
      "bun lint:css"
    ]
  }
}
